<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice">
        <%= notice %>
      </p>
    <% end %>

    <!-- Render the comment itself -->
    <%= render @comment %>

    <!-- Link to edit the comment -->
    <%= link_to "Edit this comment", edit_post_comment_path(@post, @comment), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>

    <!-- Link to go back to the comments for the specific post -->
    <%= link_to "Back to comments", post_comments_path(@post), class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>

    <!-- Button to destroy the comment -->
    <div class="inline-block ml-2">
      <%= button_to "Destroy this comment", post_comment_path(@post, @comment), method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
    </div>
  </div>
</div>
